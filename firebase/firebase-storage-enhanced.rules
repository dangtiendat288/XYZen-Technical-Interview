rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated users to upload clips to their own folder
    match /clips/{userId}/{fileName} {
      // Only authenticated users can read any clips
      allow read: if request.auth != null;
      
      // Users can only upload to their own folder with these constraints:
      // - Must be authenticated with matching userId
      // - File must be less than 100MB
      // - Content type must be a video format
      allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 100 * 1024 * 1024
                    && request.resource.contentType.matches('video/.*');
    }
    
    // Allow profile picture uploads
    match /profilePictures/{userId} {
      // Anyone can view profile pictures
      allow read: if true;
      
      // Users can only upload their own profile picture with constraints:
      // - Must be authenticated with matching userId
      // - File must be less than 5MB
      // - Content type must be image
      allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
    
    // Rules for clip thumbnails
    match /thumbnails/{userId}/{fileName} {
      // Anyone can view thumbnails
      allow read: if true;
      
      // Only authenticated users can create thumbnails with constraints:
      // - Must be authenticated with matching userId
      // - File must be less than 2MB
      // - Content type must be image
      allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 2 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
